{% extends 'base.html.twig' %}

{% block title %}Modification du profile{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    textarea {
        width: 350px;
        height: 75px;
    }
</style>

<div class="example-wrapper">

    <h1>Modification du profile</h1>

    {{ form_start(form) }}
    {{ form_row(form.email, { 'label': 'E-Mail* '}) }}
    {{ form_row(form.plainPassword, { 'label': 'Mot de passe*  ', 'value' : 'dummypass'}) }}
    {{ form_row(form.pseudo, { 'label': 'Pseudo* '}) }}
    {{ form_row(form.nom, { 'label': 'Nom* '}) }}
    {{ form_row(form.prenom, { 'label': 'Prénom* '}) }}
    <label>Description</label><br>
    {{ form_row(form.description, { 'label': ' '}) }}
    {{ form_row(form.prive, { 'label': 'Compte privé '}) }}
    <br>
    <button class="btn">Valider</button>
    {{ form_end(form) }}
    <p>* requis</p>
</div>
{% endblock %}
